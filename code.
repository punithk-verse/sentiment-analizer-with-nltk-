
from nltk.sentiment import SentimentIntensityAnalyzer

print("Chatbot Sentiment Analyzer (type 'exit' to quit)")
sia = SentimentIntensityAnalyzer()

while True:
    text = input("Enter a sentence: ")
    if text.lower() == "exit":
        break

    score = sia.polarity_scores(text)
    print("Scores:", score)

    compound = score['compound']
    if compound >= 0.05:
        print("Positive statement detected ğŸ˜Š")
    elif compound <= -0.05:
        print("Negative statement detected ğŸ˜")
    else:
        print("Neutral statement detected ğŸ˜")
    print("-" * 40)
